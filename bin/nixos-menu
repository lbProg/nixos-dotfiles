#!/usr/bin/env bash

export PATH="$HOME/nixos-dotfiles/bin:$PATH"

# Set to true when going directly to a submenu, so we can exit directly
BACK_TO_EXIT=false

menu() {
  local prompt="$1"
  local options="$2"
  local extra="$3"
  local preselect="$4"

  read -r -a args <<<"$extra"

  if [[ -n "$preselect" ]]; then
    local index
    index=$(echo -e "$options" | grep -nxF "$preselect" | cut -d: -f1)
    if [[ -n "$index" ]]; then
      args+=("-c" "$index")
    fi
  fi

  notify-send prompt

  echo -e "$options" | nixos-launch-walker --dmenu --width 295 --minheight 1 --maxheight 600 -p "$promptâ€¦" "${args[@]}" 2>/dev/null
}

show_main_menu() {
  local choice
  choice = $(menu "Go" "learn")
  notify-send $choice
  #go_to_menu "$(menu "Go" "learn")"
}

go_to_menu() {
  case "${1,,}" in
  *learn*) notify-send "helo" ;;
  *) notify-send "hii" ;;
  esac
}

if [[ -n "$1" ]]; then
  BACK_TO_EXIT=true
  go_to_menu "$1"
else
  show_main_menu
fi
